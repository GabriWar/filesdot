{
	"$schema": "/etc/xdg/swaync/configSchema.json",
	"positionX": "right",
	"positionY": "top",
	"layer": "overlay",
	"control-center-margin-top": 20,
	"control-center-margin-bottom": 20,
	"control-center-margin-right": 20,
	"control-center-margin-left": 20,
	"control-center-layer": "top",
	"control-center-exclusive-zone": true,
	"notification-icon-size": 64,
	"show-per-app-icon": 1,
	"show-per-app-label": 1,
	"notification-body-image-height": 100,
	"notification-body-image-width": 200,
	"notification-window-height": 600,
	"notification-window-preferred-output": "",
	"control-center-preferred-output": "",
	"timeout": 3,
	"timeout-low": 2,
	"timeout-critical": 0,
	"fit-to-screen": false,
	"control-center-width": 500,
	"control-center-height": 900,
	"notification-window-width": 490,
	"keyboard-shortcuts": true,
	"notification-grouping": true,
	"image-visibility": "when-available",
	"transition-time": 200,
	"hide-on-clear": true,
	"hide-on-action": true,
	"script-fail-notify": true,
	"notification-2fa-action": true,
	"relative-timestamps": true,
	"text-empty": "ðŸŽ‰ All caught up!",
	"ignore-gtk-theme": true,
	"widgets": [
		"inhibitors",
		"title",
		"dnd",
		"mpris",
		"volume",
		"backlight",
		"notifications"
	],
	"widget-config": {
		"title": {
			"text": "ðŸ”” Control Center",
			"clear-all-button": true,
			"button-text": "ó°†´ Clear All"
		},
		"dnd": {
			"text": "ðŸ”• Do Not Disturb"
		},
		"inhibitors": {
			"text": "ðŸš« Inhibitors",
			"clear-all-button": true,
			"button-text": "Clear All"
		},
		"mpris": {
			"image-size": 96,
			"image-radius": 8,
			"blacklist": ["kew", "firefox"],
			"show-album-art": "always",
			"loop-carousel": true,
			"autohide": false
		},
		"volume": {
			"label": "ðŸ”Š Volume",
			"show-per-app": true,
			"show-per-app-icon": true,
			"show-per-app-label": true,
			"expand-button-label": "â–¼",
			"collapse-button-label": "â–²",
			"empty-list-label": "No active applications",
			"animation-type": "slide_down",
			"animation-duration": 300
		},
		"backlight": {
			"label": "ðŸ’¡ Brightness",
			"device": "intel_backlight",
			"subsystem": "backlight",
			"min": 5
		}
	},
	"notification-visibility": {
		"spotify-ad-block": {
			"state": "ignored",
			"app-name": "Spotify",
			"summary": "Advertisement.*"
		},
		"low-battery": {
			"state": "enabled",
			"override-urgency": "critical",
			"summary": ".*[Bb]attery.*",
			"body": ".*(low|critical).*"
		},
		"steam-notifications": {
			"state": "muted",
			"app-name": "Steam",
			"category": "im.*"
		},
		"discord-mute": {
			"state": "muted",
			"app-name": "discord",
			"summary": ".*(typing|joined|left).*"
		},
		"email-important": {
			"state": "enabled",
			"override-urgency": "normal",
			"app-name": "thunderbird",
			"summary": ".*(important|urgent).*"
		}
	},
	"scripts": {
		"notification-logger": {
			"exec": "echo \"$(date): $SWAYNC_APP_NAME - $SWAYNC_SUMMARY\" >> ~/.local/share/swaync/notification.log",
			"run-on": "receive"
		},
		"battery-alert": {
			"exec": "notify-send -u critical 'Low Battery' 'Please connect charger!'",
			"summary": ".*[Bb]attery.*",
			"body": ".*(critical|low).*",
			"run-on": "receive"
		},
		"screenshot-sound": {
			"exec": "paplay /usr/share/sounds/camera-shutter.oga 2>/dev/null || true",
			"summary": "Screenshot.*",
			"run-on": "receive"
		},
		"focus-window": {
			"exec": "swaymsg '[app_id=\"$SWAYNC_APP_NAME\"] focus' 2>/dev/null || swaymsg '[class=\"$SWAYNC_APP_NAME\"] focus' 2>/dev/null || true",
			"run-on": "action"
		}
	}
}
