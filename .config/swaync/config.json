{
	"$schema": "/etc/xdg/swaync/configSchema.json",
	"positionX": "right",
	"positionY": "top",
	"layer": "overlay",
	"control-center-margin-top": 20,
	"control-center-margin-bottom": 20,
	"control-center-margin-right": 20,
	"control-center-margin-left": 20,
	"notification-icon-size": 64,
	"show-per-app-icon": 1,
	"show-per-app-label": 1,
	"notification-body-image-height": 100,
	"notification-body-image-width": 200,
	"timeout": 3,
	"timeout-low": 2,
	"timeout-critical": 0,
	"fit-to-screen": false,
	"control-center-width": 500,
	"control-center-height": 900,
	"notification-window-width": 490,
	"keyboard-shortcuts": true,
	"image-visibility": "when-available",
	"transition-time": 200,
	"hide-on-clear": true,
	"hide-on-action": true,
	"script-fail-notify": true,
	"notification-2fa-action": true,
	"relative-timestamps": true,
	"widgets": [
		"inhibitors",
		"title",
		"dnd",
		"menubar",
		"mpris",
		"volume",
		"backlight",
		"buttons-grid",
		"notifications"
	],
	"widget-config": {
		"title": {
			"text": "🔔 Control Center",
			"clear-all-button": true,
			"button-text": "󰆴 Clear All"
		},
		"dnd": {
			"text": "🔕 Do Not Disturb"
		},
		"inhibitors": {
			"text": "🚫 Inhibitors",
			"clear-all-button": true,
			"button-text": "Clear All"
		},
		"mpris": {
			"image-size": 96,
			"image-radius": 8,
			"blacklist": ["kew", "firefox"],
			"show-album-art": "always",
			"loop-carousel": true,
			"autohide": false
		},
		"volume": {
			"label": "🔊 Volume",
			"show-per-app": true,
			"show-per-app-icon": true,
			"show-per-app-label": true,
			"expand-button-label": "▼",
			"collapse-button-label": "▲",
			"empty-list-label": "No active applications",
			"animation-type": "slide_down",
			"animation-duration": 300
		},
		"backlight": {
			"label": "💡 Brightness",
			"min": 5
		},
		"menubar": {
			"menu#power": {
				"label": "⚡ Power",
				"position": "right",
				"animation-type": "slide_down",
				"animation-duration": 300,
				"actions": [
					{
						"label": "🔄 Restart",
						"command": "systemctl reboot"
					},
					{
						"label": "⏻ Shutdown",
						"command": "systemctl poweroff"
					},
					{
						"label": "😴 Suspend",
						"command": "systemctl suspend"
					}
				]
			},
			"menu#system": {
				"label": "🖥 System",
				"position": "right",
				"animation-type": "slide_down",
				"animation-duration": 300,
				"actions": [
					{
						"label": "📊 System Monitor",
						"command": "btop"
					},
					{
						"label": "🗂 File Manager",
						"command": "krusader"
					}
				]
			},
			"buttons#quick-actions": {
				"position": "left",
				"actions": [
					{
						"label": "📷",
						"command": "grim -g \"$(slurp)\" ~/Pictures/screenshot-$(date +%Y%m%d_%H%M%S).png"
					},
					{
						"label": "🌐",
						"command": "nm-connection-editor"
					},
					{
						"label": "🎵",
						"command": "pavucontrol"
					},
					{
						"label": "📶 WiFi",
						"command": "nm-connection-editor"
					},
					{
						"label": "🔵 Bluetooth",
						"command": "blueman-manager",
						"type": "toggle",
						"update-command": "bluetoothctl show | grep -q 'Powered: yes' && echo true || echo false"
					},
					{
						"label": "🖥 Monitor",
						"command": "nwg-displays"
					}
				]
			}
		}
	},
	"notification-visibility": {
		"low-battery": {
			"state": "enabled",
			"override-urgency": "critical",
			"summary": ".*[Bb]attery.*",
			"body": ".*(low|critical).*"
		},
		"steam-notifications": {
			"state": "muted",
			"app-name": "Steam",
			"category": "im.*"
		}
	},
	"scripts": {
		"notification-logger": {
			"exec": "echo \"$(date): $SWAYNC_APP_NAME - $SWAYNC_SUMMARY\" >> ~/.local/share/swaync/notification.log",
			"run-on": "receive"
		},
		"battery-alert": {
			"exec": "notify-send -u critical 'Low Battery' 'Please connect charger!'",
			"summary": ".*[Bb]attery.*",
			"body": ".*(critical|low).*",
			"run-on": "receive"
		},
		"screenshot-sound": {
			"exec": "paplay /usr/share/sounds/camera-shutter.oga",
			"summary": "Screenshot.*",
			"run-on": "receive"
		},
		"focus-app-on-click": {
			"exec": "hyprctl dispatch focuswindow \"class:$SWAYNC_APP_NAME\" || hyprctl dispatch focuswindow \"title:$SWAYNC_APP_NAME\"",
			"run-on": "action"
		}
	}
}
